+   int i;
+
+   /* write even blocks */
+   for (i=size; i>=write_block_size;
+      i-=write_block_size,offset+=write_block_size)
+      fwrite(file_source+offset,write_block_size,1,fp);
+
+   fwrite(file_source+offset,i,1,fp); /* write remainder */
+   
+   bytes_written+=size; /* update counter */
