+	new_dir->dir_table[0].status = s_close;
+	dir->dir_table[index].dir = new_dir;
+	new_dir->num_files = 1;
+	dir->num_files++;
+	
+	LOG_INFO("mkdir %s done\n", path);
+	return 0;
+}
diff --git a/fs/hfs_open.c b/fs/hfs_open.c
