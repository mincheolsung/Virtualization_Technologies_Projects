+         {
+         if (RND(10)<bias_read) /* read file */
+            read_file(find_used_file(),buffered);
+         else /* append file */
+            append_file(find_used_file(),buffered);
+         }
+
+      if (bias_create!=-1) /* if create/delete not locked out... */
+         {
+         if (RND(10)<bias_create) /* create file */
+            create_file(buffered);
+         else /* delete file */{}
