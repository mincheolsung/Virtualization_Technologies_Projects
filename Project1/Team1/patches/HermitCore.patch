+
+#include <hermit/hfs.h>
+#include <hermit/hfs_struct.h>
+#include "misc.h"
+
+int hfs_close(int fd)
+{
+	struct file_desc *file;
+
+	file = get_file(fd);
+	if (!file)
+	{
+		LOG_ERROR("file not opened\n");
