+   /* write even blocks */
+   for (i=size; i>=write_block_size;
+      i-=write_block_size,offset+=write_block_size)
+      write(fd,file_source+offset,write_block_size);
+
+   write(fd,file_source+offset,i); /* write remainder */
+
+   bytes_written+=size; /* update counter */
+}
